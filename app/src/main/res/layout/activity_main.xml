<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#006CC1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Up"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_below="@id/lll3"
                android:text="Belajar menjadi lebih mudah dan terstruktur "
                android:textColor="#FFFFFF"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="12dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:backgroundTint="#006CC1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-37dp"
                android:src="@drawable/icicici"/>

            <ImageButton
                android:id="@+id/modesatu"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="25dp"
                android:background="@drawable/mode1"
                android:backgroundTint="#FBFBFB"/>

            <ImageButton
                android:id="@+id/modedua"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/mode2"
                android:backgroundTint="#FBFBFB" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mode_linier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdTodo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="7sp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Todo List"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="60dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Jadwalkan pengerjaan tugasmu"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center_horizontal|right"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/todolist" />


                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdTimer"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="7sp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3CFFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Timer"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="60dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Maksimalkan waktu belajarmu"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center_horizontal|right"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/stopwatch" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdNote"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="7sp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Note"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="60dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Catat materi belajarmu"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center_horizontal|right"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/note" />

                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdNone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="7sp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Translate"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="60dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Terjemahkan tugasmu disini"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center_horizontal|right"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/translation" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mode_kotak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdTodo_kotak"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="25dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="17dp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="125dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Todo List"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="150dp"
                                android:layout_marginRight="30dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Jadwalkan pengerjaan tugasmu"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:padding="12dp"
                                    android:src="@drawable/todolist" />


                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdTimer_kotak"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="17sp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3CFFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="125dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Timer"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="150dp"
                                android:layout_marginRight="30dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Maksimalkan waktu belajar Anda"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:padding="12dp"
                                    android:src="@drawable/stopwatch" />


                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdNote_kotak"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="25dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="17dp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="125dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Note"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="150dp"
                                android:layout_marginRight="30dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Catat materi belajarmu"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:padding="12dp"
                                    android:src="@drawable/note" />


                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdNone_kotak"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="17dp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Translate"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="130dp"
                                android:layout_marginRight="30dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="Terjemahkan tugasmu disini"
                                android:textColor="#959595" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:padding="10dp"
                                    android:src="@drawable/translation" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>